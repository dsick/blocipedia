<h1><%= @wiki.title %></h1>

<% if current_user %>
  <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-success' %>
<% end %>
<div class="row">
  <div class="col-md-8">
    <p class="lead">
      <%= markdown(@wiki.body) %>
    </p>
    <p class="lead">
      <strong>Private:</strong> <%= @wiki.private %>
    </p>
  </div>
  <% if current_user %>
    <div class="col-md-4">
      <% if policy(Wiki.new).new? %>
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
      <% end %>
      <% if policy(@wiki).destroy? %>
      <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
      <% end %>
    </div>
  <% end %> 
</div>
<div class="row">
  <div class="col-md-8">
    <h2>Collaborators</h2>
    
      <%= render @wiki.collaborators %>
  
      <p>No Collaborators yet. Click Edit to add a Collaborator.</p>

  </div>
</div>